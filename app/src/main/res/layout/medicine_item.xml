<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="10dp"
    android:id="@+id/item"
    android:elevation="1dp"
    app:cardBackgroundColor="@color/light_blue"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_medname"
            android:maxLines="1"
            android:text="Aspirin"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_medication_class"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Medication class1"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_medname"
            android:layout_marginEnd="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dose_title"
            android:text="Dosage: "
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_medname"
            app:layout_constraintStart_toStartOf="@+id/tv_medname"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_dose"
            android:text="twice a day"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_dose_title"
            app:layout_constraintStart_toEndOf="@+id/tv_dose_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_strength_title"
            android:text="Strength:"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_dose_title"
            app:layout_constraintStart_toStartOf="@+id/tv_medname"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_strength"
            android:text="500 Mg"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/tv_dose"
            app:layout_constraintBottom_toBottomOf="@+id/tv_strength_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>