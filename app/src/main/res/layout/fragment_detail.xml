<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detail.DetailFragment">
    <include layout="@layout/appbar"
        android:id="@+id/app_bar"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/item"
        android:elevation="1dp"
        app:layout_constraintTop_toBottomOf="@+id/app_bar"
        app:cardBackgroundColor="@color/light_blue"
        app:cardCornerRadius="15dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_medname"
                android:maxLines="1"
                android:text="Aspirin"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="parent"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_marginTop="5dp"
                android:id="@+id/divider"
                app:layout_constraintTop_toBottomOf="@+id/tv_medname"
                android:background="@color/dark_blue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_medication_class"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Medication class1"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_medname"
                android:layout_marginEnd="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_dose_title"
                android:text="Dosage: "
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                app:layout_constraintStart_toStartOf="@+id/tv_medname"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_dose"
                android:text="twice a day"
                android:textSize="14sp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/tv_dose_title"
                app:layout_constraintStart_toStartOf="@+id/tv_disease"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_strength_title"
                android:text="Strength:"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_dose_title"
                app:layout_constraintStart_toStartOf="@+id/tv_medname"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_strength"
                android:text="500 Mg"
                android:textSize="14sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/tv_disease"
                app:layout_constraintBottom_toBottomOf="@+id/tv_strength_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_disease_title"
                android:text="Used for:"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_strength"
                app:layout_constraintStart_toStartOf="@+id/tv_medname"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_disease"
                android:text="YZsjfsdkfksfj"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@+id/tv_disease_title"
                app:layout_constraintBottom_toBottomOf="@+id/tv_disease_title"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>